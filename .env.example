# Automated Meeting Notes System - Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Required
# ===================

# OpenAI API Key - Get one at https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===================
# Optional - Email
# ===================

# Resend API Key - Get one at https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-api-key-here

# Email sender address (must be verified in Resend)
EMAIL_FROM=Meeting Notes <notes@yourdomain.com>

# ===================
# Optional - Slack
# ===================

# Slack Webhook URL - Create one at https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# ===================
# Optional - Config
# ===================

# Enable debug mode (default: false)
DEBUG=false

# Maximum upload file size in MB (default: 500)
MAX_FILE_SIZE_MB=500

# Rate limit for uploads per minute (default: 10)
RATE_LIMIT_PER_MINUTE=10

# Audio chunk duration for long files in minutes (default: 10)
WHISPER_CHUNK_DURATION_MINUTES=10

# Database URL (default: SQLite)
# For PostgreSQL: postgresql+asyncpg://user:pass@host:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./meeting_notes.db

# Upload directory (default: uploads)
UPLOAD_DIR=uploads
